<h1><%= @movie.title %></h1>

<h3>Creation Year: <%= @movie.creation_year %></h3>
<h3>Genre: <%= @movie.genre %></h3>
<h3>Cast: <% @movie.actors.each do |actor| %><h3>
  <%= actor.name %>
<% end %><br><br><br>

<h3>Add an actor to this movie:</h3>
<%= form_with url: "/movies/#{@movie.id}", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.search_field :name %>
  <%= hidden_field :id, @movie.id %>
  <%= f.submit "Submit" %>
<% end %>
